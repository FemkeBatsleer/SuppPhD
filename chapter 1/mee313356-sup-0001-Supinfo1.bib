file = {:D$\backslash$:/fbatslee/Documents/Mendeley Desktop/Moore et al (2017) Environmental Entomology.pdf:pdf},
issn = {19382936},
journal = {Environmental Entomology},
keywords = {Detection,Ecology {\&} behavior,Forest entomology,GIS,Pest management},
number = {1},
