title = {{Does dispersal limit beetle re-colonization of restored fenland? A case study using direct measurements of dispersal and genetic analysis}},
volume = {22},
year = {2014}
}
@article{Lee2014,
abstract = {Abstract Harmonic radar technology enhances capability to track the movement of individual small insects under field conditions. To maximize the capacity of this technology, it is necessary that radar tags must be securely attached to insects and that the tags remain functional when subjected to mechanical stress. In this study, a series of experiments was carried out to test an improved harmonic radar tag designed to be more resistant to mechanical stresses and to establish that a portable harmonic radar system can effectively detect adult Halyomorpha halys St{\aa}l (Hemiptera: Pentatomidae) on various structures in different landscapes. The functional resistance of radar tags to ∼1-m free falls on a hard surface was improved significantly by reinforcing the adhesive bond between the radar transponder and the radar wire by application of cyanoacrylate glue. This measure did not affect the detectability of radar tags, and it significantly increased the resistance of radar tags against random mechanical impact...},
