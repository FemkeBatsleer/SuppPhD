journal = {The Journal of Experimental Biology},
keywords = {amblypygid,arthropod,navigation,olfaction},
pages = {jeb.149823},
title = {{Importance of the antenniform legs, but not vision, for homing by the neotropical whip spider, {\textless}i{\textgreater}Paraphrynus laevifrons{\textless}/i{\textgreater}}},
